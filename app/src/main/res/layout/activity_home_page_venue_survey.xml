<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/rlStartSearch"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/ivVenueSurveyBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/nav_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="岩场概况"
                android:textSize="18sp"
                android:textColor="#333333"
                />
            <ImageView
                android:id="@+id/ivVenueSurveySearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_seach2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:id="@+id/llEndSearch"
                    android:visibility="gone"
                    >
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_weight="9"
                        android:layout_height="29dp"
                        android:id="@+id/etVenueSearch"
                        android:textColor="@color/day_edit_color"
                        android:background="@drawable/background_search"
                        android:layout_centerVertical="true"
                        android:textSize="12sp"
                        android:paddingLeft="10dp"
                        android:hint="输入关键字搜索"
                        android:drawableLeft="@mipmap/btn_seach2"
                        android:drawablePadding="5dp"
                        android:layout_marginRight="12dp"
                        android:textColorHint="@color/day_edit_hit_color"
                        />
                    <TextView
                        android:id="@+id/tvVenueSurveyClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消"
                        android:textColor="@color/orange"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                </LinearLayout>
    </RelativeLayout>
    <TextView
        style="@style/finelin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/llSearchResult">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="搜索记录"
            android:background="#f5f4f0"
            android:textColor="#999999"
            android:id="@+id/tvSearchTitle"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            />
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="12dp"
            app:layoutManager="LinearLayoutManager"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="清除搜索记录"
            android:id="@+id/tvClearAll"
            android:textColor="#41a6ed"
            android:textSize="15sp"
            android:gravity="center"/>
    </LinearLayout>
    <include layout="@layout/tablayout"
        />

</LinearLayout>
