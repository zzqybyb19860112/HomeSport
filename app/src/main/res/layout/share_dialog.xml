<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    >
<LinearLayout style="@style/personal_layout"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:background="@color/background"
   >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/day_edit_color"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dip12"
            android:layout_marginBottom="25dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvQQ"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="12sp"
                android:text="QQ好友"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginRight="25px"
                android:drawableTop="@mipmap/share_qq"
                />

            <TextView
                android:id="@+id/tvQQzone"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="12sp"
                android:text="QQ空间"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginRight="25px"
                android:drawableTop="@mipmap/share_zone"
                />

            <TextView
                android:id="@+id/tvWeChat"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="12sp"
                android:text="微信好友"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginRight="25px"
                android:drawableTop="@mipmap/share_weixin"
                />

            <TextView
                android:id="@+id/tvFriends"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="12sp"
                android:text="朋友圈"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginRight="25px"
                android:drawableTop="@mipmap/share_pengyq"
                />

            <TextView
                android:id="@+id/tvSina"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="12sp"
                android:text="新浪微博"
                android:gravity="center"
                android:drawablePadding="10dp"
                android:layout_marginRight="25px"
                android:drawableTop="@mipmap/share_xinlang"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/share_text_button"
            android:text="删除"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dip12"
            android:layout_marginRight="@dimen/dip12"
            android:textColor="#FF2A2A"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/share_text_button"
            android:text="取消"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dip12"
            android:layout_marginRight="@dimen/dip12"
            android:textColor="@color/day_edit_hit_color"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    </RelativeLayout>