<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    >
    <include layout="@layout/public_title"/>
    <RelativeLayout
        android:id="@+id/re_gold"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="我的攀岩币"
            />
        <TextView
            android:id="@+id/tv_gold_number"
            style="@style/panyanbi_text"
            android:text="201"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        style="@style/boldlin"
        />
    <RelativeLayout
        android:id="@+id/re_record"
        style="@style/personal_item_layout"
        android:visibility="gone"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="兑换记录"
            />
        <ImageView
            style="@style/personal_item_imageview"
            android:src="@mipmap/btn_right"
            />
    </RelativeLayout>
        <RelativeLayout
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="每日任务"
                android:textColor="@color/day_edit_hit_color"
                />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="15sp"
                android:text="点赞"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tvZanNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成 (0/1)"
                android:textSize="12sp"
                android:textColor="@color/day_edit_hit_color"
                />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+1"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="15sp"
                android:text="发布评论"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tvPinlun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成 (0/1)"
                android:textSize="12sp"
                android:textColor="@color/day_edit_hit_color"
                />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+1"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="15sp"
                android:text="发布动态"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />

                <TextView
                    android:id="@+id/tvDynamicNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未完成 (0/1)"
                    android:textSize="12sp"
                    android:textColor="@color/day_edit_hit_color"
                    />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+3"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="67dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:textSize="15sp"
                android:text="分享"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tvShareNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成 (0/1)"
                android:textSize="12sp"
                android:textColor="@color/day_edit_hit_color"
                />
            </LinearLayout>
            <TextView
                style="@style/panyanbi_text"
                android:text="+1"
                />
        </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/dip12"
    android:orientation="horizontal"
    >
<TextView
    android:id="@+id/liaojie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/day_edit_hit_color"
    android:textSize="12sp"
    android:text="点击这里了解"
    />
    <TextView
        android:id="@+id/tv_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《攀岩币规则》"
        android:textSize="12sp"
        android:textColor="@color/orange"
        />
</LinearLayout>
</LinearLayout>