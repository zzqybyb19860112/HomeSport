<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    >
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
        <TextView
            android:id="@+id/tvTitle"
            style="@style/personal_title"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin" />
    <LinearLayout
        android:id="@+id/llBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_phone"
            android:textColorHint="@color/day_edit_hit_color"
            android:textSize="14sp"
            android:hint="请输入手机号码"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:paddingBottom="5dp"
            android:maxLength="11"
            android:textCursorDrawable="@null"
            android:inputType="phone"
            android:textColor="@color/day_edit_color"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/background"
            />
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etVerCode"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/btn_yanzm"
                android:textColorHint="@color/day_edit_hit_color"
                android:textSize="14sp"
                android:hint="请输入验证码"
                android:drawablePadding="10dp"
                android:background="@null"
                android:paddingBottom="5dp"
                android:inputType="phone"
                android:maxLength="6"
                android:textCursorDrawable="@null"
                android:textColor="@color/day_edit_color"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tvVerCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:text="获取验证码"
                />
        </LinearLayout>

        <TextView
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/background"
            />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_lock"
            android:textColorHint="@color/day_edit_hit_color"
            android:textSize="14sp"
            android:hint="请输入密码"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:paddingBottom="5dp"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:textColor="@color/day_edit_color"
            android:digits="@string/register_name_digits"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/background"
            />

        <TextView
            android:id="@+id/tvProtocol"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#cbcbcb"
            android:layout_marginTop="3dp"
            android:text="注册表示您同意《趣攀岩软件许可服务协议》"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tvNext"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="注册"
            android:background="@drawable/login_text"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPerfect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_set_head_icon"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传头像"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/day_edit_hit_color"
            android:layout_marginBottom="45dp"
            />
        <EditText
            android:id="@+id/etNickName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="填写昵称"
            android:textSize="14sp"
            android:textCursorDrawable="@null"
            android:textColor="@color/day_edit_color"
            android:textColorHint="@color/day_edit_hit_color"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@color/background"
            />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="280dp"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="完成"
            android:background="@drawable/login_text"/>
    </LinearLayout>


</LinearLayout>
