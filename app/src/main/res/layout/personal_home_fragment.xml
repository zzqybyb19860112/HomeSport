<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/ivBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/bg_personal"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >
                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/nav_mail"
                    />
                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/nav_set"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                >
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="110dp"
                    android:layout_height="45dp"
                    android:background="@mipmap/icon_information_box"
                    android:text="点击登录"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_login"
                    android:text="快来登录查看详情哟~"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_white"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/avatar"
                    app:riv_oval="true"
                    app:riv_tile_mode="clamp"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="萌妹子"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/ivLv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:src="@mipmap/img_lv1"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="#80ffffff"
                    android:text="个人简介:萌妹子一枚"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:id="@+id/ll_attention"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#80ffffff"
                            android:text="关注"
                            android:paddingBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/tvGz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:text="20"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_fans"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#80ffffff"
                            android:text="粉丝"
                            android:paddingBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/tvFs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:text="20"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_gold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#80ffffff"
                            android:text="攀岩币"
                            android:paddingBottom="10dp"
                            />
                        <TextView
                            android:id="@+id/tvCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:text="20"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:id="@+id/re_active"
            style="@style/personal_item_layout"
            android:background="@drawable/item_press_state"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="我的活动"
                android:drawableLeft="@mipmap/btn_active"
                />
            <ImageView
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <RelativeLayout
            android:id="@+id/re_dynamic"
            style="@style/personal_item_layout"
            android:background="@drawable/item_press_state"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="我的动态"
                android:drawableLeft="@mipmap/btn_trends"
                />
            <ImageView
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <RelativeLayout
            android:id="@+id/re_show"
            style="@style/personal_item_layout"
            android:background="@drawable/item_press_state"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="我的装备秀"
                android:drawableLeft="@mipmap/btn_show"
                android:paddingLeft="6dp"
                android:drawablePadding="16dp"
                />
            <ImageView
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
