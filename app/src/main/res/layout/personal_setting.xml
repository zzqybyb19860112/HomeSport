<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    android:background="@color/background"
    >
    <include layout="@layout/public_title"/>
    <TextView
       style="@style/finelin"
        />
    <RelativeLayout
        android:id="@+id/re_info"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="个人资料"
            />
        <ImageView
            style="@style/personal_item_imageview"
            android:src="@mipmap/btn_right"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_attestation"
        style="@style/personal_item_layout"
        android:visibility="gone"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="实名认证"
            />
        <ImageView
            style="@style/personal_item_imageview"
            android:src="@mipmap/btn_right"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_push"
        style="@style/personal_item_layout"
        android:visibility="gone"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="消息推送"
            />
        <ToggleButton
            android:id="@+id/togglebutton"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:clickable="true"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/switch_btn"
            android:button="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        style="@style/boldlin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/re_grade"
            style="@style/personal_item_layout"
            android:visibility="gone"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="去给我们评分吧"
                />
            <ImageView
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin"
            android:layout_marginLeft="@dimen/dip12"
            android:layout_marginRight="@dimen/dip12"
            />
        <RelativeLayout
            android:id="@+id/re_clean"
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="清理缓存"
                />
            <TextView
                android:id="@+id/tvCache"
                style="@style/personal_item_imageview"
                android:textColor="@color/day_edit_hit_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        style="@style/boldlin"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <RelativeLayout
        android:id="@+id/re_feedback"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="意见反馈"
            />
        <ImageView
            style="@style/personal_item_imageview"
            android:src="@mipmap/btn_right"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_about"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="关于我们"
            />
        <ImageView
            style="@style/personal_item_imageview"
            android:src="@mipmap/btn_right"
            />
    </RelativeLayout>
    </LinearLayout>
<TextView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_loginout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/white"
        android:text="退出账号"
        android:gravity="center"
        android:textColor="@color/orange"
        />
</LinearLayout>
