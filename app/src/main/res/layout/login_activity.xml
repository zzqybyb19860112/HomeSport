<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    >
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
        <TextView
            style="@style/personal_title"
            android:text="登录"
            />
        <TextView
            android:id="@+id/tvRegister"
            style="@style/personal_title"
            android:text="注册"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin" />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/btn_phone"
        android:textColorHint="@color/day_edit_hit_color"
        android:textSize="14sp"
        android:hint="请输入手机号码"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:paddingBottom="5dp"
        android:textCursorDrawable="@null"
        android:inputType="phone"
        android:textColor="@color/day_edit_color"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/background"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/btn_lock"
        android:textColorHint="@color/day_edit_hit_color"
        android:textSize="14sp"
        android:hint="请输入手机密码"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:paddingBottom="5dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textColor="@color/day_edit_color"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            />
        <TextView
            android:id="@+id/tvForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="忘记密码"
            android:textColor="@color/day_edit_hit_color"
            android:layout_gravity="right"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginTop="43dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="登录"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/login_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
<LinearLayout
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:visibility="gone"
    >
    <TextView
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/background"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="  其他登录方式  "
        android:textColor="#cbcbcb"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/background"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="22dp"
    android:layout_marginBottom="22dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:visibility="gone"
    >
    <ImageView
        android:id="@+id/ivQQ"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/btn_qq"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="1dp" />
    <ImageView
        android:id="@+id/ivWecat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/btn_weixin"
        />
    <TextView
        android:layout_width="55dp"
        android:layout_height="1dp" />
    <ImageView
        android:id="@+id/ivSina"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/btn_xinlang"
        />
</LinearLayout>
</LinearLayout>
