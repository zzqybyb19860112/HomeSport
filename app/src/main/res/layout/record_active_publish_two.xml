<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/reStartTime"
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="活动开始时间"
                android:textColor="@color/day_edit_hit_color"
                />
            <ImageView
                android:id="@+id/btn_right"
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_right"
                android:textColor="@color/day_edit_color"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin" />
        <RelativeLayout
            android:id="@+id/reEndTime"
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="活动结束时间"
                android:textColor="@color/day_edit_hit_color"
                />
            <ImageView
                android:id="@+id/btn_right2"
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_right2"
                android:textColor="@color/day_edit_color"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin" />
        <RelativeLayout
            android:id="@+id/reApplyEndTiem"
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="报名截止时间"
                android:textColor="@color/day_edit_hit_color"
                />
            <ImageView
                android:id="@+id/btn_right3"
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
            <TextView
                android:id="@+id/tvApplyEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_right3"
                android:textColor="@color/day_edit_color"
                />
        </RelativeLayout>
        <TextView
            style="@style/finelin" />
        <RelativeLayout
            android:id="@+id/reAddress"
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="集合地点"
                android:textColor="@color/day_edit_hit_color"
                />
            <ImageView
                android:id="@+id/btn_right4"
                style="@style/personal_item_imageview"
                android:src="@mipmap/btn_right"
                />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_right4"
                android:textColor="@color/day_edit_color"
                />
        </RelativeLayout>
        <TextView style="@style/finelin" />
        <RelativeLayout
            style="@style/personal_item_layout"
            >
            <TextView
                style="@style/personal_item_textview"
                android:text="报名人数"
                android:textColor="@color/day_edit_hit_color"
                />
            <EditText
                android:id="@+id/tvNumber"
                style="@style/personal_item_imageview"
                android:textColor="@color/day_edit_color"
                android:hint="无限制"
                android:textSize="15sp"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/day_edit_hit_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView style="@style/boldlin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="活动价格"
            android:textColor="@color/day_edit_hit_color"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioGroup
            android:id="@+id/PriceRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            >
            <RadioButton
                android:id="@+id/rbAA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="AA"
                android:button="@drawable/radiobutton"
                android:textColor="@color/day_edit_color"
                android:paddingLeft="4dp"
                />

            <RadioButton
                android:id="@+id/rbAward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="奖励"
                android:button="@drawable/radiobutton"
                android:textColor="@color/day_edit_color"
                android:visibility="gone"
                />

            <RadioButton
                android:id="@+id/rbFree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="免费"
                android:checked="true"
                android:button="@drawable/radiobutton"
                android:textColor="@color/day_edit_color"
                android:paddingLeft="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:background="@color/background"
        >
        <CheckBox
            android:id="@+id/Chckbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点击发布表示您已同意"
            android:textSize="12sp"
            style="@style/checkboxk_select"
            android:paddingLeft="4dp"
            android:textColor="@color/day_edit_hit_color"
            />
        <TextView
            android:id="@+id/tvRule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="《趣攀岩活动发布服务协议》"
            android:textColor="@color/day_item_color"
            android:textSize="13sp"
            android:gravity="center"
            android:autoLink="all"
            />
    </LinearLayout>
</LinearLayout>
