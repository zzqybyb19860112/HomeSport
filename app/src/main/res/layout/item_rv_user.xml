<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/personal_layout"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rivUserPhoto"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            style="@style/small_avatar"
            android:src="@drawable/demo_05"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginRight="@dimen/dip12"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:text="土拨鼠"
                android:maxEms="15"
                android:singleLine="true"
                android:maxLines="1"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/ivUserLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/img_lv3"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvUserText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/day_edit_hit_color"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:maxLines="1"
            android:text="这是一条最新动态"
            android:paddingLeft="@dimen/dip10"
            />
    </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvUserCancel"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="取消"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/btn_close"
            android:background="@drawable/attention_not"
            android:textColor="@color/day_edit_hit_color"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvUserConcern"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="关注"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/btn_add"
            android:background="@drawable/attention_yes"
            android:textColor="@color/green"
            />
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
</LinearLayout>
