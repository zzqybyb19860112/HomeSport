<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff5f5f5</item>
        <item name="colorPrimaryDark">#fff5f5f5</item>
        <item name="colorAccent">#fff5f5f5</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="personal_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="personal_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/nav_back</item>
    </style>
    <style name="personal_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/day_edit_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>
    <style name="log_out_dialog">
        <item name="android:windowEnterAnimation">@anim/log_out_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/log_out_exit_dialog</item>
    </style>
    <style name="personal_title_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="PackTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:textSize">15sp</item>
        <item name="tabSelectedTextColor">@color/orange</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--分割线-->
    <style name="finelin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background</item>
    </style>
    <style name="boldlin" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="personal_item_textview" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_item_color</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="personal_setting_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/day_edit_color</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="personal_item_imageview" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="personal_item_layout" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="pack_re1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="pack_liulan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">109次浏览</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="pack_zan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:drawableLeft">@mipmap/btn_good</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="pack_msg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/day_edit_hit_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:drawableLeft">@mipmap/btn_talk</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="small_avatar">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="panyanbi_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="Dialog_Fullscreen"  parent="android:Theme.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#e6000000</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- window背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕内容区域以外的背景是否可以设置灰度值(与backgroundDimAmount搭配使用) -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 灰度值 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>
    <style name="checkboxk_select" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/chebox_select</item>
        </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/black</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        <!-- 灰度值 -->
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="Dialog_FS">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
