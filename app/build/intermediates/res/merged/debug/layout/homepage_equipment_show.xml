<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/personal_layout">
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
        <TextView
            style="@style/personal_title"
            android:text="秀装备"
            />
        <TextView
            android:id="@+id/tvPush"
            style="@style/personal_title"
            android:text="发布"
            android:textColor="@color/orange"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
       style="@style/finelin" />
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请输入标题"
        android:textColorHint="@color/day_edit_hit_color"
        android:paddingLeft="@dimen/dip12"
        android:gravity="center_vertical"
        android:textColor="@color/day_edit_color"
        android:textSize="15sp"
        android:textCursorDrawable="@null"
        />
    <TextView
        style="@style/boldlin" />
    <EditText
        android:id="@+id/etContent"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="请输入内容"
        android:paddingLeft="@dimen/dip12"
        android:textColorHint="@color/day_edit_hit_color"
        android:gravity="top"
        android:textColor="@color/day_edit_color"
        android:textSize="15sp"
        android:textCursorDrawable="@null"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/revImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:fadingEdge="none"
        android:layout_margin="@dimen/dip16"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="4"
        tools:listitem="@layout/list_item_image"/>
    <TextView
        style="@style/boldlin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dip12"
        android:paddingTop="@dimen/dip12"
        android:paddingBottom="@dimen/dip12"
        android:text="请选择标签"
        android:textSize="15sp"
        android:textColor="@color/day_edit_hit_color"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            >
        <RadioButton
            android:id="@+id/cbHelm"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:text="头盔"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/type_dialog"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:button="@null"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/cbShoes"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:text="鞋子"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/type_dialog"
            android:textColor="@color/day_edit_hit_color"
            android:layout_marginRight="15dp"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/cbDynamicRope"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:text="动力绳"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/type_dialog"
            android:textColor="@color/day_edit_hit_color"
            android:layout_marginRight="15dp"
            android:button="@null"
            />
        <RadioButton
            android:id="@+id/cbLock"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:text="主锁"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/type_dialog"
            android:textColor="@color/day_edit_hit_color"
            android:layout_marginRight="15dp"
            android:button="@null"
            />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background"/>
</LinearLayout>
