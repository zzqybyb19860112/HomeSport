<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/personal_layout"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvatar"
            style="@style/small_avatar"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginRight="@dimen/dip12"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:text="奔跑的小猪"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="12sp"
                android:text="1分钟前"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_lv1"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#88333333"
        android:textSize="12sp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        tools:text="描述描述描述描述描述描述描述描述"/>

    <com.w4lle.library.NineGridlayout
        android:id="@+id/nineGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:id="@+id/re1"
        style="@style/pack_re1"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/day_edit_hit_color"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_msg"
            style="@style/pack_msg"
            android:text="111"
            />
        <TextView
            android:id="@+id/tv_zan"
            style="@style/pack_zan"
            android:text="111"
            />
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
</LinearLayout>
