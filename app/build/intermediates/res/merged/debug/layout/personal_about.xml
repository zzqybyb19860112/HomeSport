<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout">
    <include layout="@layout/public_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@mipmap/img_logo"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/day_edit_color"
            android:text="趣攀岩"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/tvVersions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/background"
        android:visibility="gone"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:text="扫描二维码"
        android:layout_marginTop="65dp"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#666666"
        android:text="推荐朋友下载趣攀岩APP"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />
<ImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:src="@mipmap/img_erwm"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Copyright by 趣攀岩"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/day_edit_hit_color"
            />
    </LinearLayout>
</LinearLayout>
