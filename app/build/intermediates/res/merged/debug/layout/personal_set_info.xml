<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <include layout="@layout/public_title"/>
    <RelativeLayout
        android:id="@+id/re_avatar"
        android:layout_height="65dp"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="头像"
            />
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_set_head_icon"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_name"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="昵称"
            />
        <EditText
            android:id="@+id/etNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入昵称"
            android:textSize="15sp"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/day_edit_hit_color"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="right"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_sex"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="性别"
            />
        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="您的性别"
            android:textSize="15sp"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/day_edit_hit_color"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="right"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_time"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="生日"
            />
        <TextView
            android:id="@+id/tvBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="您的生日"
            android:textSize="15sp"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/day_edit_hit_color"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="right"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_address"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="所在地"
            />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="您的所在地"
            android:textSize="15sp"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/day_edit_hit_color"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="right"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="@dimen/dip12"
        android:layout_marginRight="@dimen/dip12"
        />
    <RelativeLayout
        android:id="@+id/re_signer"
        style="@style/personal_item_layout"
        >
        <TextView
            style="@style/personal_item_textview"
            android:text="签名"
            />
        <EditText
            android:id="@+id/etSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入您的签名"
            android:textSize="15sp"
            android:textColorHint="@color/day_edit_hit_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/day_edit_hit_color"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="right"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        />
</LinearLayout>
