<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        android:paddingTop="@dimen/dip12"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/day_edit_color"
            android:text="官方活动:来吧一起攀岩吧"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/day_edit_hit_color"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:text="官方活动:来吧一起攀岩吧"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="-15"
            android:textColor="@color/green"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin"/>
</LinearLayout>
