<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    >
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <ImageView
            android:id="@+id/ivBack"
            style="@style/personal_back"
            />
        <TextView
            style="@style/personal_title"
            android:text="忘记密码"
            />
    </RelativeLayout>
    <TextView
        style="@style/finelin" />
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/btn_phone"
        android:textColorHint="@color/day_edit_hit_color"
        android:textSize="14sp"
        android:hint=" 请输入手机号码"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:paddingBottom="5dp"
        android:maxLength="11"
        android:textCursorDrawable="@null"
        android:inputType="phone"
        android:textColor="@color/day_edit_color"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/background"
        />
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etVerCode"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_yanzm"
            android:textColorHint="@color/day_edit_hit_color"
            android:textSize="14sp"
            android:hint=" 请输入验证码"
            android:drawablePadding="10dp"
            android:background="@null"
            android:paddingBottom="5dp"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:textColor="@color/day_edit_color"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvVerCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:text="获取验证码"
            />
    </LinearLayout>

    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/background"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/btn_lock"
        android:textColorHint="@color/day_edit_hit_color"
        android:textSize="14sp"
        android:hint=" 请输入新密码"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:paddingBottom="5dp"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textColor="@color/day_edit_color"
        />
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/background"
        />

    <TextView
        android:id="@+id/tvProtocol"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#cbcbcb"
        android:layout_marginTop="3dp"
        android:text="注册表示您同意《趣攀岩软件许可服务协议》"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tvSucceed"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:text="完成"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/login_text"/>
</LinearLayout>
