<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/personal_layout"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivAvatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/register_set_head_icon"
            app:riv_oval="true"
            app:riv_tile_mode="clamp"
            android:layout_marginTop="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginRight="@dimen/dip12"
            android:orientation="vertical"
            android:layout_marginTop="18dp"
            >
            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_color"
                android:text="奔跑的小猪"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="12sp"
                android:text="9-10 15:00"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivLv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_lv1"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/tv_apply_lable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:text="正在报名"
            android:gravity="right"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
    <TextView
        style="@style/finelin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dip15"
        android:paddingBottom="11dp"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/tv_active_lable"
                android:layout_width="30dp"
                android:layout_height="18dp"
                android:background="@drawable/active_lable"
                android:text="求带"
                android:padding="2dp"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_margin="6dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dip12"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找个老岩友带带我"
                android:textColor="@color/day_edit_color"
                android:paddingTop="@dimen/dip10"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已报名:0 剩余名额:1"
                android:layout_below="@+id/tv_title"
                android:textColor="@color/day_edit_hit_color"
                android:paddingTop="4dp"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="8dp"
                android:textSize="12sp"
                android:textColor="@color/day_edit_hit_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/re1"
        style="@style/pack_re1"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/dip12"
        android:paddingRight="@dimen/dip12"
        >
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/day_edit_hit_color"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_msg"
            style="@style/pack_msg"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_zan"
            style="@style/pack_zan"
            />
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
</LinearLayout>
