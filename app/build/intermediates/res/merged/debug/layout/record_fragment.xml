<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/personal_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        style="@style/personal_title_background"
        >
        <TextView
            android:text="记录"
            style="@style/personal_title"
            />
        <TextView
            android:id="@+id/tvTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="20dp"
            android:layout_alignParentRight="true"
            android:text="排行榜"
            android:textSize="15sp"
            android:textColor="@color/hot_info_circle_content_color"
            />
        <TextView
            style="@style/finelin"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTrack"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="15sp"
                android:text="攀岩次数"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/tvSportTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/day_edit_color"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="15sp"
                android:text="荣誉值"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/tvTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="@color/day_edit_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/day_edit_hit_color"
                android:textSize="15sp"
                android:text="攀岩足迹"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/btn_adress"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/btn_right"
            />
    </LinearLayout>
    <TextView
        style="@style/boldlin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hot_info_circle_content_color"
        android:textSize="15sp"
        android:text="请选择场馆"
        android:padding="12dp"
        />
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/dip12"
        />
<RelativeLayout
    android:id="@+id/rlJumpToMap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="15sp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/btn_adress2"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <TextView
        style="@style/boldlin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hot_info_circle_content_color"
        android:textSize="15sp"
        android:text="线路难度"
        android:padding="12dp"
        />
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/dip12"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >
    <TextView
        android:id="@+id/tvDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:text="0.0"
        />
    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/btn_down2"
        android:paddingLeft="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>
    <TextView
        style="@style/boldlin" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hot_info_circle_content_color"
        android:textSize="15sp"
        android:text="花费时间"
        android:padding="12dp"
        />
    <TextView
        style="@style/finelin"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="@dimen/dip12"
        />
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:padding="12dp"
        android:text="00:00"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        >
        <TextView
            android:id="@+id/tvRecord"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="记一下"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/record_text"
            />
    </FrameLayout>


</LinearLayout>
